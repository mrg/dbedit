<frame resizable="true" size="640,280" title="Preferences">
  <panel layout="GridBagLayout" doubleBuffered="true">
    <tabbedpane>
      <gridbagconstraints anchor="GridBagConstraints.NORTHWEST" insets="10,10,10,10"
                  gridwidth="GridBagConstraints.REMAINDER" fill="GridBagConstraints.BOTH" gridx="0" gridy="0" weightx="1" weighty="1"/>

      <panel name="Connections" layout="BorderLayout">
        <hbox constraints="BorderLayout.NORTH">
          <vbox>
            <label text="To :"/>
            <label text="Subject :"/>
          </vbox>
          <vbox>
            <textfield Text="joshua.marinacci@sun.com"/>
            <textfield text="SwiXml is really cool!"/>        
          </vbox>
        </hbox>

        <scrollpane constraints="BorderLayout.CENTER">
          <textarea>
          </textarea>
        </scrollpane>
      </panel>
      <panel name="Paths" layout="BorderLayout">
        <vbox constraints="BorderLayout.NORTH">
          <scrollpane constraints="BorderLayout.CENTER">
            <list id="jarList" SelectionMode="ListSelectionModel.SINGLE_SELECTION">
            </list>
          </scrollpane>

          <hbox>
            <button text="Add JAR/ZIP File" action="addJAR"></button>
            <button text="Remove JAR/ZIP File" action="removeJAR"></button>
          </hbox>
        </vbox>
      </panel>
    </tabbedpane>
  </panel>
</frame>

