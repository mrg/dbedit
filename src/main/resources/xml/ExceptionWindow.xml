<frame resizable="true" size="640,280" title="Exception Report">
  <panel layout="GridBagLayout" doubleBuffered="true">
    <scrollPane >
      <gridbagconstraints anchor="GridBagConstraints.NORTHWEST" insets="10,10,10,10"
                  gridwidth="GridBagConstraints.REMAINDER" fill="GridBagConstraints.BOTH" gridx="0" gridy="0" weightx="1" weighty="1"/>
      <textArea id="textArea" editable="false" font="Courier-12" lineWrap="true" />
    </scrollPane>

      <button text="OK">
        <gridbagconstraints anchor="GridBagConstraints.EAST" insets="0,10,10,10" fill="GridBagConstraints.NONE" gridx="0" gridy="1" weightx="0" weighty="0"/>
      </button>
  </panel>
</frame>

